<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.PopupOverlayMobile" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:tint">@color/transparent_color</item>
    </style>

    <style name="AppTheme.AppBarOverlayMobile" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="android:tint">@color/theme_white</item>
    </style>


</resources>